<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="300"/>
    <HBox GridPane.rowIndex="1" GridPane.columnIndex="0">
        <TextField fx:id="textField" prefWidth="250" onAction="#onClickBtn"/>
        <Button text="send" prefWidth="50" onAction="#onClickBtn"/>
    </HBox>
</GridPane>